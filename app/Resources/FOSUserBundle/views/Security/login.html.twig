{#{% extends "FOSUserBundle::layout.html.twig" %}#}
{% extends "::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    {% block login %}
    {% endblock %}
{#{% block fos_user_content %}#}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <label for="username">{#{{ 'security.login.username'|trans }}#} Login</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

    <label for="password">{#{{ 'security.login.password'|trans }}#}Password</label>
    <input type="password" id="password" name="_password" required="required" />

    <input type="submit" id="_submit" name="_submit" value="{#{{ 'security.login.submit'|trans }}#} Login" />
</form>
{#{% endblock fos_user_content %}#}
{% endblock %}

{% block footer %}{% endblock %}